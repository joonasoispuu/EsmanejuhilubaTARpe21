<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EsmaneJuhilubaTARpe21JÕ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EsmaneJuhilubaTARpe21JÕ.styles.css" asp-append-version="true" />
    <link rel="icon" href="@Url.Content("~/favicons.ico")" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary-bg border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/img/drivers_license.png" alt="Logo" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Primary Driver's License</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Driving_Exam" asp-action="Register">Register</a>
                        </li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Driving_Exam" asp-action="Driving_School">Driving School</a>
                        </li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Driving_Exam" asp-action="Theory_Exam">Theory Exam</a>
                        </li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Driving_Exam" asp-action="Driving_Test">Driving Test</a>
                        </li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Driving_Exam" asp-action="driving_test_results">Driving Test Results</a>
                        </li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Driving_Exam" asp-action="License">License</a>
                        </li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Driving_Exam" asp-action="Issued_licenses">Applicants Results</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EsmaneJuhilubaTARpe21JÕ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
